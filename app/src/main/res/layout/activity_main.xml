<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView

            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/reguser"
            android:paddingLeft="100dp"
            android:text="User Register"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="5dp"/>

        <EditText
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your Name"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/name"
            android:drawablePadding="5dp"/>

        <EditText
            android:layout_margin="10dp"
            android:hint="Enter your Second Name"
            android:id="@+id/textName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/name"
            android:drawablePadding="5dp"/>

        <EditText
            android:layout_margin="10dp"
            android:hint="Enter your Address"
            android:id="@+id/textAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="5dp"/>

        <EditText
            android:layout_margin="10dp"
            android:hint="Enter your Status"
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/status"
            android:drawablePadding="5dp"
            />

        <EditText
            android:layout_margin="10dp"
            android:hint="Contact number"
            android:id="@+id/textTellnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/mobno"
            android:drawablePadding="5dp"/>

        <EditText
            android:id="@+id/textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter your email password"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:backgroundTint="#fff"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="5dp"/>


        <Button

            android:id="@+id/buttonRegister"
            android:text="Register user"
            android:layout_width="250dp"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:text="Already Registered? Sign in here"
            android:id="@+id/textViewSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>

    </LinearLayout>

</RelativeLayout>